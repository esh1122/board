<!DOCTYPE html>
<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <%- include("./head.ejs") %>
    </head>
    <body>
        <%- include("./navbar.ejs") %>
        <div class="container" style="margin-top: 100px ;">
            <div style="margin-bottom: 30px;">
                <h2>게시글 추가</h2>
            </div>
            <form action="/board/add_2" method="POST">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="span_title" name="title">글 제목</span>
                    <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="span_content" >글 내용</span>
                    <textarea class="form-control" id="floatingTextarea" name="content" style="height:300px;"></textarea>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="span_img" name="img">그림첨부</span>
                    <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>
                <div align="right">
                    <input class="btn btn-outline-success" type="submit" value="글 추가" >
                </div>                
            </form>
        </div>
    </body>
</html>